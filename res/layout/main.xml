<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:weightSum="1" android:id="@+id/linear">
    <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Вкл/Выкл Bluetooth"
            android:id="@+id/switch1"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Характеристики Bluetooth"
            android:id="@+id/button1" android:onClick="onBtnClick"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text=""
            android:id="@+id/textView1" android:layout_weight="0.20"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Поиск устройств..."
            android:id="@+id/button2" android:onClick="onBtnClick"/>
    <ListView
            android:layout_width="match_parent"
            android:layout_height="159dp"
            android:id="@+id/listView1"/>
</LinearLayout>

